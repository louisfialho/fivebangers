<div class="container">
  <div class="home-page">
    <div class="home-navbar">
      <h4>2000 Â©</h4>
      <h4>The club is open</h4>
    </div>
    <div class="sign-in-entry">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-backdoor">
          <%= f.input :email,
                      required: true,
                      placeholder: 'Email',
                      label: false,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: 'Password',
                      input_html: { autocomplete: "current-password" } %>
          <%#= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Get inside", class: "home-btn submit-devise-btn" %>
        </div>
      <% end %>
    </div>
    <div class="footer-home footer-devise">
      <h4>Dancefloor</h4>
      <h4>Lounge Bar</h4>
      <h4>Terrace</h4>
      <h4 id="smoking">Smoking Room</h4>
      <h4>Backdoor</h4>
    </div>
  </div>
</div>

